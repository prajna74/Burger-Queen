<section class="hero py-16">
<div class="container mx-auto flex items-center justify-between ">
<div class="w-1/2">
   <h6 class="text-lg"><em>Are you Hungry?</em></h6>
   <h1 class="text-4xl font-bold">Don't worry!<br><em>Burger Queen for your rescue!</em></h1>
   <a href="#menu" class="inline-block btn-primary home_button my-4 rounded-full text-white py-2 px-4">Order Now</a>
</div>
<div class="w-1/2">
      <img src="/imgs/hero_burger.png" width="600" height="600" alt="">
</div>
</div>
</section>
<section class="menu container mx-auto py-4" id="menu">
    <h1 class="text-4xl font-bold mb-8">All Burgers</h1>
    <div class="grid grid-cols-4 row-gap-20 col-gap-12"> 
      <% for(var i=0;i<burgers.length;i++){%>
   <div class="w-64">
  <div>
       <img class="mx-auto mb-8 h-40"src="/imgs/hero_burger.png"  alt="">
  </div>
  <div class="text-center">
        <h2 class="text-l font-bold"><%=burgers[i].name%></h6>
        <span class="size py-1 px-4 text-xs rounded-full uppercase"><%=burgers[i].size%></span>
        <div class="flex items-center justify-around mt-6">
              <span class="font-bold text-l">$<%=burgers[i].price%></span>
          <button data-burger=<%=JSON.stringify(burgers[i])%> class="add-to-cart rounded-full py-1 px-6 flex items-center">
                <span>+</span>
              <span>Add</span>
          </button>
        </div>
  </div>
  
</div>
<%}%>
</div>
</section>