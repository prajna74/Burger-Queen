<section class="track">
<div class="container mx-auto">
    <div class="status-box w-2/3 mx-auto">
        <div class="flex items-center justify-between mb-12 mt-12">
                <h1 class="text-xl text-bold mt-8">Track summary</h1>
                <h6 class="rounded-full bg-white text-green-600 text-sm py-1 px-4 mt-8"><%=order.id%></h6>
        </div>
        <input type="hidden" id="status" value="<%=JSON.stringify(order)%>" id="status"/>
        <ul>
            <li class="status-line text-xl pb-16" data-status="order_placed"><span>Order placed</span></li>
            <li class="status-line text-xl pb-16"data-status="confirmed"><span>Order confirmation</span></li>
            <li class="status-line text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
            <li class="status-line text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
            <li class="status-line text-xl " data-status="completed"><span>Complete</span></li>
        </ul>
    </div>
</div>
</section>